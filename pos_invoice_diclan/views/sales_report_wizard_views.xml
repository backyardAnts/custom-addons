<odoo>
  <record id="view_pos_sales_report_wizard_form" model="ir.ui.view">
    <field name="name">pos.sales.report.wizard.form</field>
    <field name="model">pos.sales.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Diclan POS Sales Report">
        <group>
          <group>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="use_order_date"/>
          </group>
          <group>
            <field name="session_ids" widget="many2many_tags"/>
            <field name="user_ids" widget="many2many_tags"/>
            <field name="partner_id"/>
          </group>
        </group>
        <footer>
          <button name="action_preview" type="object" class="btn-secondary" string="Preview Results"/>
          <button name="action_print_pdf" type="object" class="btn-primary" string="Print PDF"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_open_pos_sales_report_wizard" model="ir.actions.act_window">
    <field name="name">Diclan POS Sales Report</field>
    <field name="res_model">pos.sales.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
