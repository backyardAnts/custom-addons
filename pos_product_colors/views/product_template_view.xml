<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_pos_bg_color" model="ir.ui.view">
        <field name="name">product.template.form.pos.bg.color</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- Guaranteed anchor in Odoo 16 -->
            <xpath expr="//field[@name='available_in_pos']" position="after">
                <field name="pos_bg_color"
                       placeholder="#ff0000 / yellow / rgb(255,0,0)"/>
            </xpath>

        </field>
    </record>
</odoo>
