<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    <xpath expr="//div[contains(text(), 'Served by')]" position="attributes">
        <attribute name="t-if">false</attribute>
    </xpath>
    <xpath expr="//div[contains(text(), 'Guests')]" position="attributes">
        <attribute name="t-if">false</attribute>
    </xpath>
    <xpath expr="//t[@t-if='receipt.table']" position="replace">
    <div>
        Table: <t t-esc="receipt.table"/>
    </div>
</xpath>
<xpath expr="//div[hasclass('pos-receipt-amount')][1]" position="after">
    <div class="responsive-price">
        <div>USD</div>
        <span class="pos-receipt-right-align">
            <t t-esc="receipt.total_usd.toFixed(2)"/> $
        </span>
    </div>
</xpath>

        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <div>
                City: Sakiet El Mesk
            </div>
            <t t-if="receipt.client">
                <div>
                    Client:
                    <t t-esc="receipt.client.name" />
                </div>
                <t t-if="receipt.client.mobile">
                <div>
                    Mobile:
                    <t t-esc="receipt.client.mobile"/>
                </div>
</t>  
            </t>
        </xpath>
    </t>
</templates>
